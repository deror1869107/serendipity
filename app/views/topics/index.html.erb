<% @article = @topic.articles.last %>
<p style="font-size:36px"><%= @topic.title %></p>
<p style="font-size:30px">最新一篇文章</p>

<div class="col-md-9">
	<%= render :partial => "articles/show" %>
</div>

<div class="col-md-3">
	<p style="font-size:30px">近期文章</p>	
	<% @topic.articles.offset(1).last(5).reverse.each do |a| %>
		<article>
		    <h4><a href="singlepost.html"><%= a.title %></a></h4>
		    <span style="font-size:14px;">
		    <div>
		        <span style="left: 0px;">
		            <%= a.author %>
		        </span>
		        <span style="position: absolute; right: 20px;">
		            <%= a.created_at.localtime.strftime("%Y-%m-%d %H:%M:%S") %>
		        </span>
		    </div>

		    

		    <span style="text-align:center;"><img src="http://placehold.it/900x300" class="img-responsive"></span>

		    <br />

		    <%= a.content.html_safe.first(50) %>...

		    </span>
		    <hr>
		</article>
	<% end %>

</div>
