<div class="col-md-6 col-md-offset-3">
<%= simple_form_for [@topic, @article], html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.input :author,  input_html: { class: "form-control"}  %>
    <%= f.input :title,  input_html: { class: "form-control"}  %>
    <%= f.input :image %>
    <%= f.input :content, as: :bootsy,  input_html: { rows: 20}  %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>
<% end %>
