<article>
  <div class="content-image"><%= image_tag(@article.image.url(:content)) %></div>
  <div class="content-title">
    <h2><%= link_to @article.title, topic_article_path(@article.topic_id, @article.id) %></h2>
  </div>
  <span style="font-size:18px;">
    <div class="row">
      <div class="group1 col-sm-6 col-md-6">
        作者：<%= @article.author %>
      </div>
      <div class="group2 col-sm-6 col-md-6" style="text-align:right">
        <span class="glyphicon glyphicon-pencil"></span> <a href="singlepost.html#comments"><%= comments_count_helper %></a>
        <span class="glyphicon glyphicon-time"></span> <%= @article.created_at.localtime.strftime("%Y-%m-%d %H:%M:%S") %>
        <% if current_user.admin? %>
          <%= link_to "修改文章", edit_topic_article_path(@article.topic_id, @article.id), :class => "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <hr>
    <br />
    <%= @article.content.html_safe %>
  </span>
  <hr>
  <h2>留言</h2>
  <% @article.comments.each do |c| %>
    <%= c.content %>
  <% end %>
</article>
